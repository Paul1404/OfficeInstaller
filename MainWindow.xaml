<Window x:Class="OfficeInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Office Deployment Tool GUI" Height="150" Width="450" Icon="microsoft-office.ico">

    <!-- Styling -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>

    <!-- Layout -->
    <Grid Margin="10">
        <!-- Rows definition -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for the label -->
            <RowDefinition Height="Auto"/>
            <!-- Row for the TextBox and Choose button -->
            <RowDefinition Height="Auto"/>
            <!-- Row for the Install button -->
        </Grid.RowDefinitions>

        <!-- Choose Configuration XML Label -->
        <TextBlock Text="Choose Configuration XML:" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <!-- TextBox and Choose XML Button -->
        <TextBox x:Name="XmlPathTextBox" IsReadOnly="True" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,120,0"/>
        <Button Content="Choose XML" Click="ChooseXmlButton_Click" Width="100" Grid.Row="1" HorizontalAlignment="Left" Margin="330,0,0,28" Grid.RowSpan="2"/>

        <!-- Install Office Button -->
        <Button Content="Install Office" Width="200" Click="InstallOfficeButton_Click" Grid.Row="2" HorizontalAlignment="Center"/>
    </Grid>
</Window>
